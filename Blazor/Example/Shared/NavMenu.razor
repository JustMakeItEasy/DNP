            <NavLink class="nav-link" href="ExternalTodo">
                <span class="oi oi-list" aria-hidden="true"></span> External Todos
            </NavLink>
        </li>
    </ul>
</div>

@code {
    bool collapseNavMenu = true;

    string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
